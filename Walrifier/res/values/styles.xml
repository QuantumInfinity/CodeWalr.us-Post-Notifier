<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:icon">@drawable/walrii_0</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        
    </style>
    
    <!-- main layout -->
    
    <style name="background">
		<item name="android:background">@drawable/bg_repeat</item>
    </style>
    
	<style name="loading">
		<item name="android:layout_margin">4dp</item>
    </style>
	
	<style name="recycler">
		<item name="android:layout_marginTop">4dp</item>
    </style>
    
	<!-- drawer layout -->
	
	<style name="left_drawer">
		<item name="android:layout_gravity">start</item>
		<item name="android:choiceMode">singleChoice</item>
		<item name="android:divider">@color/drawer_divider</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:background">@color/drawer_background</item>
	</style>
	
	<style name="drawer_item">
	    <item name="android:gravity">center_vertical|center_horizontal</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/drawer_text</item>
		<item name="android:background">@drawable/bg_drawer_selected</item>
	</style>
	
	<!-- credits layout -->
	
	<style name="credits">
		<item name="android:layout_gravity">start</item>
		<item name="android:choiceMode">singleChoice</item>
		<item name="android:divider">@color/drawer_divider</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:background">@color/credits_background</item>
	</style>
	
	<style name="credits_item">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/credits_text</item>
		<item name="android:padding">10dp</item>
	</style>
	
	<!-- card -->
	
    <style name="walrifiercard">
		<item name="android:layout_margin">4dp</item>
	</style>
    
	<style name="titlebar">
		<item name="android:background">@color/card_title_bar</item>
	</style>
	
	<style name="title">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/card_title_text</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<style name="time">
		<item name="android:gravity">center_vertical|end</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/card_time_text</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_below">@id/title</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="content">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/card_content_text</item>
		<item name="android:layout_below">@id/titlebar</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>
	
	<style name="poster">
	    <item name="android:gravity">center_vertical|end</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/card_poster_text</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:textStyle">italic</item>
		<item name="android:layout_below">@id/content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>
</resources>
