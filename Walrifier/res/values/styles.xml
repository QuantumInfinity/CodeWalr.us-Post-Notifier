<resources>
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    
    <!-- main layout -->
    
    <style name="background">
		<item name="android:background">@drawable/bg_repeat</item>
    </style>
    
	<style name="loading">
		<item name="android:layout_margin">4dp</item>
    </style>
	
		<style name="recycler">
		<item name="android:layout_marginTop">4dp</item>
    </style>
	
	<!-- card -->
	
    <style name="walrifiercard">
		<item name="android:layout_margin">4dp</item>
	</style>
    
	<style name="titlebar">
		<item name="android:background">@color/titlebar</item>
	</style>
	
	<style name="title">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">@color/titletext</item>
		<item name="android:textSize">16sp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>

	<style name="time">
		<item name="android:gravity">center_vertical|end</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textColor">@color/timetext</item>
		<item name="android:textStyle">bold</item>
		<item name="android:layout_below">@id/title</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>

	<style name="content">
		<item name="android:gravity">center_vertical</item>
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/contenttext</item>
		<item name="android:layout_below">@id/titlebar</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
	</style>
	
	<style name="poster">
	    <item name="android:gravity">center_vertical|end</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/postertext</item>
		<item name="android:layout_alignParentRight">true</item>
		<item name="android:textStyle">italic</item>
		<item name="android:layout_below">@id/content</item>
		<item name="android:layout_marginLeft">10dp</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_marginBottom">5dp</item>
	</style>
</resources>
